.main-article-container
{
	-moz-box-sizing: border-box;
    background: none repeat scroll 0 0 #FFFFFF;
    border-color: #CACACA;
    border-style: solid;
    border-width: 0 1px;
    margin: 0 auto;
    min-height: 100%;
    padding: 103px 60px 40px;
    position: relative;
    width: auto;
    z-index: 1;
}
#main-article section header
{
	visibility: hidden;
}
#main-article:hover section *
{
	visibility: visible;
}
#main-article [contenteditable]
{
	min-height: 18px;
}
.main-background-container .subnav-fixed .main-article-title 
{
    color: #0088CC;
    float: left;
    font-family: Georgia,serif;
    font-size: 26px;
    font-weight: normal;
}

/* editor styles */
#main-article [contenteditable].focus
{
	box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(82, 168, 236, 0.6);
    outline: 1px solid rgba(82, 168, 236, 0.8) !important;
}
#main-article header .edit-label
{
	background: none repeat scroll 0 0 #C0C0C0;
    border-radius: 2px 2px 2px 2px;
    color: #FFFFFF;
    font-size: 10px;
    line-height: 18px;
    padding: 0 5px;
    text-transform: uppercase;
}
#main-article header .edit-words-info
{
	color: #6B6B6B;
    font-size: 11px;
    font-style: italic;
    line-height: 18px;
    padding-left: 5px;
}

/* article styles */

#main-article section p
{
	padding: 2px;
}

#main-article section[data-content='Title']
{
	font-family: Georgia,serif;
    font-size: 36px;
    line-height: 40px;
}
#main-article section[data-content='Lead']
{
	font-size: 26px;
    line-height: 28px;
    margin: 0;
}
#main-article section[data-content='Body']
{
	font-size: 14px;
    line-height: 20px;
}

.media-box-hover.image
{
	width: 100px;
	position: static;
	margin: 10px;
}

.btn-group.headings ul.dropdown-menu button
{
	background: none;
	border: none;
	border-radius: 0;
	width: 100%;
	text-align: left;
}
.btn-group.headings ul.dropdown-menu button:hover
{
	background-color: #08c;
	color: #fff;
}
.aloha-button-active
{
	background-image: none;
	-webkit-box-shadow: inset 0 2px 4px rgba(0,0,0,0.15),0 1px 2px rgba(0,0,0,0.05);
	-moz-box-shadow: inset 0 2px 4px rgba(0,0,0,0.15),0 1px 2px rgba(0,0,0,0.05);
	box-shadow: inset 0 2px 4px rgba(0,0,0,0.15),0 1px 2px rgba(0,0,0,0.05);
	filter: progid:DXImageTransform.Microsoft.gradient(enabled=false);
	background-color: #e6e6e6;
	background-color: #d9d9d9 9;
	outline: 0;
</style>



