	<div class="switch-article-view hide" id="switch_article_view">
		<ul class="switch-view-tabs" data-action="switch-view">
			<li target-view="desktop" class=""></li>
			<li target-view="tablet" class=""></li>
			<li target-view="mobile" class=""></li>
			<li target-view="print" class=""></li>
		</ul>
