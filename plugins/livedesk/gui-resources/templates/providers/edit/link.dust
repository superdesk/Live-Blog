	<div class="link-preview" style="border-top: 0px; margin-top:0px">
		<figure class="link-thumbnail"> 
			<a href="{url}" class="source-link" target="_blank"><img src="{thumbnail}"></a>
		</figure>

		<p><h3 ><a href="{url}">{title}</a></h3></p>
		<p class="result-text">{description}</p>
		<p class="attributes">
			<i class="source-icon">
				<img src="{favicon}" style="max-width: 16px" border="0">
			</i>
			<a href="{url}" class="source-link" target="_blank">{title}</a>
		</p>

	</div>